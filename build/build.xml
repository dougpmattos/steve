<?xml version="1.0" encoding="UTF-8"?>
	<project name="steve" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Applications/Eclipse Luna/plugins">
				<filename name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Workspace/steve/libraries/SLF4J">
				<filename name="slf4j-api-1.7.5.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Workspace/steve/libraries/Xuggle">
				<filename name="xuggle-xuggler-5.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Applications/Eclipse Luna/plugins/org.junit_4.11.0.v201303080030">
				<filename name="junit.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Workspace/steve/libraries/JGraphT">
				<filename name="jgrapht-jdk1.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Workspace/steve/libraries/JGraph">
				<filename name="jgraph.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/Douglas/Workspace/steve/libraries/SLF4J">
				<filename name="slf4j-simple-1.7.5.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/Users/Douglas/Workspace/steve">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
		<copy todir="projectRefs">
			<fileset dir="/Users/Douglas/Workspace">
				<include name="aNa/test/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/Users/Douglas/Workspace">
				<include name="aNa/src/**" />
			</fileset>
		</copy>
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="jgraph.jar"/>
				<include name="slf4j-api-1.7.5.jar"/>
				<include name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
				<include name="junit.jar"/>
				<include name="slf4j-simple-1.7.5.jar"/>
				<include name="jgrapht-jdk1.6.jar"/>
				<include name="xuggle-xuggler-5.4.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
		<copy todir="build/src">
			<fileset dir="projectRefs/aNa/test">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/aNa/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
		<copy todir="build/classes">
			<fileset dir="projectRefs/aNa/test">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/aNa/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="steve.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="STEVE"
			mainClass="view.stevePane.Main"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/steve.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Douglas"/>
				<attribute name="Implementation-Title" value="STEVE"/>
				<attribute name="Implementation-Version" value="1.0-0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			width="1200" height="800"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="steve" nativeBundles="none"
			placeholderref="steve"
			placeholderid="steve"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="steve" vendor="Douglas"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
